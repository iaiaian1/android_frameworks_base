<resources>

    <!-- Base battery metter drawable style -->
    <style name="BatteryMeterViewDrawable">
        <!-- Gravity used for positioning text within the battery meter -->
        <item name="android:gravity">center</item>
        <item name="blendMode">clear</item>
    </style>

    <!-- Battery meter drawable styles -->
    <style name="BatteryMeterViewDrawable.Portrait"/>
    <style name="BatteryMeterViewDrawable.Landscape"/>
	<style name="BatteryMeterViewDrawable.Circle"/>

    <style name="DotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--Tuner Theme-->
    <style name="ExTunerSettings" parent="@android:style/Theme.Material.Settings">
        <item name="preferenceTheme">@style/TunerPreferenceTheme</item>
    </style>

    <!-- Custom Carrier Label -->
    <style name="TextAppearance.StatusBar.CarrierLabel" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <!-- Note: must be dp to fit in status bar -->
        <item name="android:textSize">@dimen/status_bar_carrier_height</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_carrier_color</item>
    </style>

    <!-- App side bar -->
    <style name="AppSidebarItemText" >
        <item name="android:textColor">@color/sidebar_item_text_color</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/sidebar_item_text_shadow_color</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>

    <!-- Phyisical Keyboard Dialog style -->
    <style name="KeyboardShortcutsDialog" parent="@*android:style/Theme.DeviceDefault.Light" />
</resources>
